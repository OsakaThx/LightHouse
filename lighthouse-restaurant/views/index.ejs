<div class="hero bg-cover bg-center h-96 flex items-center" style="background-image: url('<%= heroUrl %>');">
    <div class="container mx-auto px-6 text-center text-white">
        <h1 class="text-4xl md:text-6xl font-bold mb-2"><%= (settings && settings.hero_title) ? settings.hero_title : (homePage ? homePage.title : 'Bienvenidos a Lighthouse') %></h1>
        <% if (settings && settings.hero_subtitle) { %>
          <p class="text-xl md:text-2xl mb-6"><%= settings.hero_subtitle %></p>
        <% } else if (homePage && homePage.content) { %>
          <div class="prose prose-invert max-w-2xl mx-auto mb-6"><%- homePage.content %></div>
        <% } else { %>
          <p class="text-xl md:text-2xl mb-6">El mejor café y gastronomía de Guatemala</p>
        <% } %>
        <a href="/menu" class="bg-sky-700 hover:bg-sky-800 text-white font-bold py-3 px-8 rounded-full text-lg transition duration-300">Ver Menú</a>
    </div>
    
</div>

<section id="destacados" class="py-16 bg-white">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-center mb-12">Nuestros Productos Destacados</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% if (featuredProducts && featuredProducts.length > 0) { %>
                <% featuredProducts.forEach(product => { %>
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                        <% if (product.image_url) { %>
                            <img src="<%= product.image_url %>" alt="<%= product.name %>" class="w-full h-64 object-cover">
                        <% } else { %>
                            <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                                <i class="fas fa-coffee text-6xl text-gray-400"></i>
                            </div>
                        <% } %>
                        <div class="p-6">
                            <h3 class="text-xl font-semibold mb-2"><%= product.name %></h3>
                            <p class="text-gray-600 mb-4"><%= product.description %></p>
                            <div class="flex justify-between items-center">
                                <span class="text-sky-700 font-bold text-lg">Q<%= product.price.toFixed(2) %></span>
                                <button class="bg-sky-700 hover:bg-sky-800 text-white px-4 py-2 rounded-full">
                                    Ordenar Ahora
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-span-3 text-center py-8">
                    <p class="text-gray-500">No hay productos destacados por el momento.</p>
                </div>
            <% } %>
        </div>
    </div>
</section>

<section id="historia" class="py-16 bg-sky-50">
    <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 mb-8 md:mb-0 md:pr-8">
                <h2 class="text-3xl font-bold mb-6">Nuestra Historia</h2>
                <% if (settings && settings.historia_html) { %>
                  <div class="prose max-w-none text-gray-700"><%- settings.historia_html %></div>
                <% } else { %>
                  <p class="text-gray-700">Edita este contenido en Admin → Ajustes.</p>
                <% } %>
                <a href="/about" class="text-sky-700 font-semibold hover:text-sky-800">
                    Conoce más sobre nosotros <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
            <div class="md:w-1/2">
                <div class="bg-gray-200 h-80 rounded-lg overflow-hidden">
                    <!-- Placeholder for about image -->
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                        <i class="fas fa-image text-6xl"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-16 bg-white">
    <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold mb-12">Visítanos</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
            <div class="bg-gray-200 h-96 rounded-lg overflow-hidden">
                <% if (settings && settings.map_embed_url) { %>
                  <iframe src="<%= settings.map_embed_url %>" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <% } else { %>
                  <div class="w-full h-full flex items-center justify-center text-gray-400">
                      <i class="fas fa-map-marked-alt text-6xl"></i>
                  </div>
                <% } %>
            </div>
            <div class="text-left">
                <h3 class="text-2xl font-semibold mb-4">Horario de Atención</h3>
                <% if (scheduleList && scheduleList.length) { %>
                  <ul class="space-y-2 mb-8">
                    <% scheduleList.forEach(s => { %>
                      <li class="flex justify-between"><span><%= s.day %>:</span> <span class="font-medium"><%= s.hours %></span></li>
                    <% }) %>
                  </ul>
                <% } %>
                <h3 class="text-2xl font-semibold mb-4">Ubicación</h3>
                <p class="text-gray-700 mb-6">
                    Dirección: <%= settings && settings.address ? settings.address : 'Configura la dirección en Admin → Ajustes' %>
                </p>
                <a href="/#contacto" class="bg-sky-700 hover:bg-sky-800 text-white font-bold py-3 px-8 rounded-full text-lg inline-block transition duration-300">
                    Contáctanos
                </a>
            </div>
        </div>
    </div>
</section>
