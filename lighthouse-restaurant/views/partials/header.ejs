<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Lighthouse - Restaurante' %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body class="bg-white">
    <!-- Navigation -->
    <nav class="bg-sky-900 text-white shadow-lg">
        <div class="container mx-auto px-6 py-3">
            <div class="flex items-center justify-between">
                <a href="/" class="text-2xl font-bold">Lighthouse</a>
                <div class="hidden md:flex space-x-8">
                    <a href="/" class="hover:text-sky-200">Inicio</a>
                    <a href="/menu" class="hover:text-sky-200">Menú</a>
                    <a href="/about" class="hover:text-sky-200">Nosotros</a>
                    <a href="/contact" class="hover:text-sky-200">Contacto</a>
                    <% if (user && user.isAdmin) { %>
                        <a href="/admin" class="text-sky-300 hover:text-white">
                            <i class="fas fa-tachometer-alt"></i> Admin
                        </a>
                    <% } %>
                </div>
                <div class="md:hidden">
                    <button class="mobile-menu-button">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu -->
        <div class="mobile-menu hidden md:hidden">
            <a href="/" class="block py-2 px-4 hover:bg-sky-700">Inicio</a>
            <a href="/menu" class="block py-2 px-4 hover:bg-sky-700">Menú</a>
            <a href="/about" class="block py-2 px-4 hover:bg-sky-700">Nosotros</a>
            <a href="/contact" class="block py-2 px-4 hover:bg-sky-700">Contacto</a>
            <% if (user && user.isAdmin) { %>
                <a href="/admin" class="block py-2 px-4 bg-sky-900 text-sky-200">
                    <i class="fas fa-tachometer-alt"></i> Panel de Administración
                </a>
            <% } %>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline"><%= success_msg %></span>
        </div>
    <% } %>
    
    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline"><%= error_msg %></span>
        </div>
    <% } %>

    <main class="container mx-auto px-4 py-8">
