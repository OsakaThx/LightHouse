<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Admin - Lighthouse' %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="bg-gray-100">
    <!-- Sidebar -->
    <div class="flex h-screen">
        <div class="bg-gray-800 text-white w-64 flex-shrink-0">
            <div class="p-4 border-b border-gray-700">
                <h1 class="text-xl font-bold">Lighthouse Admin</h1>
            </div>
            <nav class="mt-4">
                <div class="px-4 py-2 text-gray-400 text-sm font-medium uppercase tracking-wider">
                    Principal
                </div>
                <a href="/admin" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                </a>
                
                <div class="px-4 py-2 mt-4 text-gray-400 text-sm font-medium uppercase tracking-wider">
                    Contenido
                </div>
                <a href="/admin/products" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-utensils mr-2"></i> Productos
                </a>
                <a href="/admin/categories" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-tags mr-2"></i> Categorías
                </a>
                <a href="/admin/pages" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-file-alt mr-2"></i> Páginas
                </a>
                <a href="/admin/menu-images" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-images mr-2"></i> Menú Digital
                </a>
                
                <div class="px-4 py-2 mt-4 text-gray-400 text-sm font-medium uppercase tracking-wider">
                    Ventas
                </div>
                <a href="/admin/orders" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-shopping-cart mr-2"></i> Órdenes
                </a>
                <a href="/admin/customers" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-users mr-2"></i> Clientes
                </a>
                
                <div class="px-4 py-2 mt-4 text-gray-400 text-sm font-medium uppercase tracking-wider">
                    Configuración
                </div>
                <a href="/admin/settings" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-cog mr-2"></i> Ajustes
                </a>
                <a href="/admin/logout" class="block px-4 py-2 text-gray-300 hover:bg-gray-700 hover:text-white">
                    <i class="fas fa-sign-out-alt mr-2"></i> Cerrar Sesión
                </a>
            </nav>
        </div>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Navigation -->
            <header class="bg-white shadow-sm">
                <div class="flex justify-between items-center px-6 py-4">
                    <div class="flex items-center">
                        <button class="text-gray-500 focus:outline-none lg:hidden">
                            <i class="fas fa-bars"></i>
                        </button>
                        <h2 class="text-xl font-semibold text-gray-800 ml-4"><%= title || 'Dashboard' %></h2>
                    </div>
                    <div class="flex items-center">
                        <div class="relative">
                            <button class="text-gray-500 focus:outline-none">
                                <i class="fas fa-bell"></i>
                                <span class="absolute top-0 right-0 h-2 w-2 rounded-full bg-red-500"></span>
                            </button>
                        </div>
                        <div class="ml-4 flex items-center">
                            <div class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                                <i class="fas fa-user text-gray-600"></i>
                            </div>
                            <span class="ml-2 text-gray-700"><%= user ? user.email : 'Admin' %></span>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6 bg-gray-100">
                <!-- Flash Messages -->
                <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                        <span class="block sm:inline"><%= success_msg %></span>
                    </div>
                <% } %>
                
                <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                        <span class="block sm:inline"><%= error_msg %></span>
                    </div>
                <% } %>
