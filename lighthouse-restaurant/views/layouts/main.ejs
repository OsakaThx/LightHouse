<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Lighthouse - Restaurante en Guatemala' %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-white">
    <!-- Navigation -->
    <nav class="bg-sky-900 text-white shadow-lg">
        <div class="container mx-auto px-6 py-3">
            <div class="flex items-center justify-between">
                <a href="/" class="text-2xl font-bold">Lighthouse</a>
                <div class="hidden md:flex space-x-8">
                    <a href="/" class="hover:text-sky-200">Inicio</a>
                    <a href="/menu" class="hover:text-sky-200">Menú</a>
                    <a href="/#historia" class="hover:text-sky-200">Nosotros</a>
                    <a href="/#contacto" class="hover:text-sky-200">Contacto</a>
                    <% if (user && user.isAdmin) { %>
                        <a href="/admin" class="text-sky-300 hover:text-white">
                            <i class="fas fa-tachometer-alt"></i> Admin
                        </a>
                    <% } %>
                </div>
                <div class="md:hidden">
                    <button class="mobile-menu-button">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu -->
        <div class="mobile-menu hidden md:hidden">
            <a href="/" class="block py-2 px-4 hover:bg-sky-700">Inicio</a>
            <a href="/menu" class="block py-2 px-4 hover:bg-sky-700">Menú</a>
            <a href="/#historia" class="block py-2 px-4 hover:bg-sky-700">Nosotros</a>
            <a href="/#contacto" class="block py-2 px-4 hover:bg-sky-700">Contacto</a>
            <% if (user && user.isAdmin) { %>
                <a href="/admin" class="block py-2 px-4 bg-sky-900 text-sky-200">
                    <i class="fas fa-tachometer-alt"></i> Panel de Administración
                </a>
            <% } %>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline"><%= success_msg %></span>
        </div>
    <% } %>
    
    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline"><%= error_msg %></span>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-sky-900 text-white py-8">
        <div class="container mx-auto px-6">
            <div class="flex flex-col md:flex-row justify-between">
                <div class="mb-6 md:mb-0">
                    <h3 class="text-xl font-bold mb-4">Lighthouse</h3>
                    <p class="text-sky-200">El mejor café y comida de Guatemala</p>
                </div>
                <div class="mb-6 md:mb-0">
                    <h4 class="text-lg font-semibold mb-3">Horario</h4>
                    <p class="text-sky-200">Lunes a Viernes: 7:00 AM - 9:00 PM</p>
                    <p class="text-sky-200">Sábado y Domingo: 8:00 AM - 10:00 PM</p>
                </div>
                <div>
                    <h4 class="text-lg font-semibold mb-3">Síguenos</h4>
                    <div class="flex space-x-4">
                        <a href="#" class="text-sky-200 hover:text-white"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-sky-200 hover:text-white"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-sky-200 hover:text-white"><i class="fab fa-tripadvisor"></i></a>
                    </div>
                </div>
            </div>
            <div class="border-t border-sky-800 mt-8 pt-6 text-center text-sky-300">
                <p>&copy; <%= new Date().getFullYear() %> Lighthouse Restaurante. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>
