<%- include('../partials/admin/header', { title: 'Panel de Administración' }) %>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Panel de Administración</h1>
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-100 text-blue-600 mr-4">
                    <i class="fas fa-utensils text-2xl"></i>
                </div>
                <div>
                    <p class="text-gray-500">Productos</p>
                    <h3 class="text-2xl font-bold"><%= productsCount %></h3>
                </div>
            </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-100 text-green-600 mr-4">
                    <i class="fas fa-tags text-2xl"></i>
                </div>
                <div>
                    <p class="text-gray-500">Categorías</p>
                    <h3 class="text-2xl font-bold"><%= categoriesCount %></h3>
                </div>
            </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-amber-100 text-amber-600 mr-4">
                    <i class="fas fa-envelope text-2xl"></i>
                </div>
                <div>
                    <p class="text-gray-500">Mensajes</p>
                    <h3 class="text-2xl font-bold"><%= messagesCount %></h3>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Orders -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-semibold">Órdenes Recientes</h2>
            <a href="/admin/orders" class="text-blue-600 hover:text-blue-800">Ver todas</a>
        </div>
        
        <% if (recentOrders && recentOrders.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% recentOrders.forEach(order => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <a href="/admin/orders/<%= order.id %>" class="text-blue-600 hover:text-blue-800">#<%= order.id %></a>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap"><%= order.customer_name %></td>
                                <td class="px-6 py-4 whitespace-nowrap">Q<%= parseFloat(order.total).toFixed(2) %></td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                        <%= order.status === 'completed' ? 'bg-green-100 text-green-800' : 
                                           order.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                                           'bg-gray-100 text-gray-800' %>">
                                        <%= order.status === 'completed' ? 'Completado' : 
                                           order.status === 'pending' ? 'Pendiente' : 'Otro' %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap"><%= new Date(order.created_at).toLocaleDateString() %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-gray-500">No hay órdenes recientes.</p>
        <% } %>
    </div>
    
    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="/admin/products/add" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <div class="text-center">
                <div class="mx-auto w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mb-3">
                    <i class="fas fa-plus text-blue-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-medium">Agregar Producto</h3>
                <p class="text-gray-500 text-sm mt-1">Añade un nuevo producto al menú</p>
            </div>
        </a>
        
        <a href="/admin/categories" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <div class="text-center">
                <div class="mx-auto w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mb-3">
                    <i class="fas fa-tags text-green-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-medium">Gestionar Categorías</h3>
                <p class="text-gray-500 text-sm mt-1">Administra las categorías del menú</p>
            </div>
        </a>
        
        <a href="/admin/settings" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <div class="text-center">
                <div class="mx-auto w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mb-3">
                    <i class="fas fa-cog text-purple-600 text-xl"></i>
                </div>
                <h3 class="text-lg font-medium">Configuración</h3>
                <p class="text-gray-500 text-sm mt-1">Ajustes del sitio web</p>
            </div>
        </a>
    </div>
</div>

<%- include('../partials/admin/footer') %>
