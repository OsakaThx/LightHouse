<%- include('../../partials/admin/header') %>

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-bold">Imágenes del Menú</h1>
        <a href="/admin/dashboard" class="text-sky-600 hover:underline">
            ← Volver al panel
        </a>
    </div>

    <!-- Upload Form -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-semibold mb-4">Subir nueva imagen</h2>
        <form action="/admin/menu-images/upload" method="POST" enctype="multipart/form-data" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Seleccionar imagen</label>
                <input type="file" name="image" accept="image/*" required 
                    class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-sky-50 file:text-sky-700 hover:file:bg-sky-100" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Nombre (opcional)</label>
                <input type="text" name="name" placeholder="Ej: Menu Principal" 
                    class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm">
            </div>
            <button type="submit" class="bg-sky-600 hover:bg-sky-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                Subir Imagen
            </button>
        </form>
    </div>

    <!-- Image Grid -->
    <div>
        <h2 class="text-xl font-semibold mb-4">Imágenes del Menú</h2>
        
        <% if (images.length === 0) { %>
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            No hay imágenes en el menú. Sube tu primera imagen usando el formulario de arriba.
                        </p>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                <% images.forEach(image => { %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
                        <div class="relative pb-[75%] bg-gray-100">
                            <img src="<%= image.url %>" alt="<%= image.name || 'Imagen de menú' %>" 
                                class="absolute h-full w-full object-cover">
                        </div>
                        <div class="p-3">
                            <div class="flex justify-between items-start mb-2">
                                <div class="font-medium text-sm text-gray-900 truncate">
                                    <%= image.name || 'Sin nombre' %>
                                </div>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <%= (image.size / 1024).toFixed(1) %> KB
                                </span>
                            </div>
                            <div class="flex space-x-2">
                                <button onclick="copyToClipboard('<%= image.url %>')" 
                                    class="text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 px-2 py-1 rounded flex items-center">
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path>
                                    </svg>
                                    URL
                                </button>
                                <form action="/admin/menu-images/delete" method="POST" class="inline" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta imagen?');">
                                    <input type="hidden" name="path" value="<%= image.path %>">
                                    <button type="submit" class="text-xs bg-red-50 hover:bg-red-100 text-red-600 px-2 py-1 rounded flex items-center">
                                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</div>

<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(() => {
        // Show a temporary tooltip or alert
        alert('¡URL copiada al portapapeles!');
    }).catch(err => {
        console.error('Error al copiar: ', err);
        alert('No se pudo copiar la URL. Por favor, inténtalo de nuevo.');
    });
}
</script>

<%- include('../../partials/admin/footer') %>
