<%- include('../../partials/admin/header', { title: 'Ajustes del Sitio' }) %>

<div class="bg-white shadow rounded-lg p-6">
  <form action="/admin/settings/save" method="POST" class="space-y-8">
    <% if (settings && settings.id) { %>
      <input type="hidden" name="id" value="<%= settings.id %>">
    <% } %>

    <section>
      <h2 class="text-xl font-semibold text-sky-900 mb-4">Hero</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <label class="block text-sm font-medium text-sky-900">Título</label>
          <input type="text" name="hero_title" value="<%= settings ? (settings.hero_title || '') : '' %>" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm">
        </div>
        <div>
          <label class="block text-sm font-medium text-sky-900">Subtítulo</label>
          <input type="text" name="hero_subtitle" value="<%= settings ? (settings.hero_subtitle || '') : '' %>" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm">
        </div>
        <div>
          <label class="block text-sm font-medium text-sky-900">Imagen (hero)</label>
          <select name="hero_image_url" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm rounded-md">
            <option value="">Sin imagen</option>
            <% heroImages.forEach(img => { %>
              <option value="<%= img.url %>" <%= settings && settings.hero_image_url === img.url ? 'selected' : '' %>><%= img.name %></option>
            <% }) %>
          </select>
          <% if (settings && settings.hero_image_url) { %>
            <img src="<%= settings.hero_image_url %>" class="mt-2 h-24 rounded object-cover"/>
          <% } %>
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-sky-900 mb-4">Nuestra Historia</h2>
      <input type="hidden" id="historia_html" name="historia_html" value="<%- settings ? (settings.historia_html || '') : '' %>">
      <div id="historiaEditor" class="bg-white border border-gray-300 rounded-md"><%- settings ? (settings.historia_html || '') : '' %></div>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-sky-900 mb-4">Visítanos</h2>
      <input type="hidden" id="visitanos_html" name="visitanos_html" value="<%- settings ? (settings.visitanos_html || '') : '' %>">
      <div id="visitanosEditor" class="bg-white border border-gray-300 rounded-md"><%- settings ? (settings.visitanos_html || '') : '' %></div>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-sky-900 mb-4">Horario y Ubicación</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-sky-900">Horario (JSON)</label>
          <textarea name="schedule_json" rows="6" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" placeholder='{"Lunes a Viernes":"7:00 AM - 9:00 PM","Sábado":"8:00 AM - 10:00 PM","Domingo":"8:00 AM - 8:00 PM"}'><%= settings ? (settings.schedule_json || '') : '' %></textarea>
        </div>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-sky-900">Dirección</label>
            <input type="text" name="address" value="<%= settings ? (settings.address || '') : '' %>" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm">
          </div>
          <div>
            <label class="block text-sm font-medium text-sky-900">Google Maps Embed URL</label>
            <input type="text" name="map_embed_url" value="<%= settings ? (settings.map_embed_url || '') : '' %>" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm" placeholder="https://www.google.com/maps/embed?...">
          </div>
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-xl font-semibold text-sky-900 mb-4">Footer</h2>
      <input type="hidden" id="footer_html" name="footer_html" value="<%- settings ? (settings.footer_html || '') : '' %>">
      <div id="footerEditor" class="bg-white border border-gray-300 rounded-md"><%- settings ? (settings.footer_html || '') : '' %></div>
    </section>

    <div class="flex justify-end">
      <button type="submit" class="bg-sky-700 hover:bg-sky-800 text-white px-4 py-2 rounded-md text-sm font-medium">Guardar Ajustes</button>
    </div>
  </form>
</div>

<link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>
<script>
  function setupQuill(editorId, inputId) {
    const quill = new Quill('#' + editorId, {
      theme: 'snow',
      modules: { toolbar: [[{ header: [1, 2, 3, false] }], ['bold', 'italic', 'underline'], [{ list: 'ordered' }, { list: 'bullet' }], ['link','blockquote','code-block'], [{ align: [] }], ['clean']] },
      placeholder: 'Escribe aquí...'
    });
    const form = document.querySelector('form[action="/admin/settings/save"]');
    form.addEventListener('submit', function() {
      const html = document.querySelector('#' + editorId + ' .ql-editor').innerHTML;
      document.getElementById(inputId).value = html;
    });
    return quill;
  }
  setupQuill('historiaEditor', 'historia_html');
  setupQuill('visitanosEditor', 'visitanos_html');
  setupQuill('footerEditor', 'footer_html');
</script>

<%- include('../../partials/admin/footer') %>
